        // Componente de Roda Detalhada (Ultra)
        const TruckWheel = ({ isDriving }) => (
            <div className={`relative w-16 h-16 ${isDriving ? 'animate-custom-spin' : ''}`} style={{ animationDuration: '0.4s' }}>
                <div className="absolute inset-0 bg-slate-900 rounded-full border-[3px] border-slate-800 shadow-xl flex items-center justify-center overflow-hidden">
                    {[...Array(12)].map((_, i) => (
                        <div key={i} className="absolute w-1 h-3 bg-slate-800" style={{ transform: `rotate(${i * 30}deg) translateY(-28px)` }} />
                    ))}
                    <div className="w-10 h-10 bg-gradient-to-tr from-slate-400 via-slate-200 to-slate-400 rounded-full shadow-inner flex items-center justify-center border border-slate-500">
                        {[...Array(6)].map((_, i) => (
                            <div key={i} className="absolute w-1.5 h-1.5 bg-slate-600 rounded-full shadow-sm" style={{ transform: `rotate(${i * 60}deg) translateY(-12px)` }} />
                        ))}
                        <div className="w-4 h-4 bg-slate-500 rounded-full border-2 border-slate-600 shadow-lg flex items-center justify-center">
                            <div className="w-1.5 h-1.5 bg-slate-700 rounded-full"></div>
                        </div>
                    </div>
                </div>
            </div>
        );

        function App() {
            const [currentStep, setCurrentStep] = useState(0);
            const [showAnswer, setShowAnswer] = useState(false);
            const [animationClass, setAnimationClass] = useState('translate-x-0 opacity-100');
            const [isDriving, setIsDriving] = useState(false);

            const currentQuestion = quizData[currentStep];
            const progress = ((currentStep + 1) / quizData.length) * 100;

            const triggerDriveAnimation = (nextIndex) => {
                setIsDriving(true);
                setAnimationClass('translate-x-[150%] opacity-0 skew-x-12 scale-95 transition-all duration-700 ease-in');
                setTimeout(() => {
                    setCurrentStep(nextIndex);
                    setShowAnswer(false);
                    setAnimationClass('-translate-x-[150%] opacity-0 transition-none');
                    setTimeout(() => {
                        setAnimationClass('translate-x-0 opacity-100 transition-all duration-700 ease-out');
                        setIsDriving(false);
                    }, 50);
                }, 800); 
            };

            return (
                <div className="min-h-screen bg-slate-950 text-slate-100 font-sans p-4 md:p-8 flex flex-col items-center overflow-x-hidden selection:bg-orange-500/30">
                    <div className="max-w-4xl w-full">
                        
                        {/* Dashboard Superior */}
                        <header className="mb-10 flex flex-col items-center">
                            <div className="flex items-center gap-6 bg-slate-900 p-5 rounded-[2rem] border-2 border-slate-800 shadow-2xl">
                                <div className="p-4 bg-gradient-to-br from-orange-500 to-orange-700 rounded-2xl shadow-lg">
                                    <Icons.Truck />
                                </div>
                                <div className="text-left">
                                    <h1 className="text-3xl font-black text-white tracking-tighter uppercase leading-none italic">LogiMaster <span className="text-orange-600">v3.0</span></h1>
                                    <div className="flex items-center gap-4 mt-2">
                                        <p className="text-slate-500 font-bold text-[10px] uppercase tracking-[0.3em]">Status: <span className="text-emerald-500">Operacional</span></p>
                                        <p className="text-slate-500 font-bold text-[10px] uppercase tracking-[0.3em]">GPS: <span className="text-blue-500">Ativo</span></p>
                                    </div>
                                </div>
                            </div>
                        </header>

                        {/* Rodovia de Progresso */}
                        <div className="mb-20 relative px-4">
                            <div className="h-4 bg-slate-900 rounded-full border-2 border-slate-800 relative overflow-hidden shadow-inner">
                                <div className="absolute inset-0 flex items-center justify-around pointer-events-none">
                                    {[...Array(30)].map((_, i) => (
                                        <div key={i} className={`w-3 h-0.5 bg-slate-800 ${isDriving ? 'animate-pulse' : ''}`}></div>
                                    ))}
                                </div>
                                <div className="absolute top-0 left-0 h-full bg-gradient-to-r from-orange-600 to-yellow-400 transition-all duration-1000 ease-in-out" style={{ width: `${progress}%` }}>
                                    <div className="absolute right-0 top-1/2 -translate-y-1/2 translate-x-1/2">
                                        <div className="p-1.5 bg-orange-600 rounded-lg shadow-2xl border-2 border-white ring-4 ring-orange-900/20">
                                            <Icons.Truck />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {/* O CAMINHÃO ULTRA DESIGN */}
                        <div className={`relative transform transition-all duration-0 ${isDriving ? 'animate-vibration' : ''} ${animationClass} mx-auto`}>
                            <div className="flex flex-col md:flex-row items-end justify-center">
                                
                                {/* TRAILER / BAÚ */}
                                <div className="relative flex-1 bg-white rounded-2xl md:rounded-r-none md:rounded-l-[2.5rem] shadow-[0_40px_80px_-15px_rgba(0,0,0,0.8)] border-b-[16px] border-slate-400 z-20 w-full md:min-w-[500px]">
                                    <div className="p-8 md:p-14 relative">
                                        <div className="flex items-center justify-between mb-10">
                                            <div className="bg-slate-900 text-white px-5 py-2 rounded-xl text-[10px] font-black tracking-[0.2em] shadow-2xl flex items-center gap-3">
                                                <div className="w-2 h-2 bg-emerald-500 rounded-full animate-pulse shadow-[0_0_8px_#10b981]"></div>
                                                SÉRIE-LOG: {String(currentQuestion.id).padStart(2, '0')}
                                            </div>
                                            <Icons.Boxes />
                                        </div>

                                        <h2 className="text-2xl md:text-3xl font-black text-slate-800 leading-tight mb-12 min-h-[6rem]">{currentQuestion.pergunta}</h2>

                                        {!showAnswer ? (
                                            <button onClick={() => setShowAnswer(true)} className="w-full py-6 bg-slate-900 hover:bg-black text-orange-500 font-black rounded-2xl shadow-2xl transition-all flex items-center justify-center gap-4 active:scale-95 text-lg border-b-4 border-slate-700 active:border-b-0">
                                                INSPECIONAR CONTEÚDO
                                            </button>
                                        ) : (
                                            <div className="space-y-6">
                                                <div className="bg-emerald-50 border-l-[12px] border-emerald-500 p-8 rounded-r-3xl shadow-lg">
                                                    <div className="text-emerald-700 font-black mb-3 text-[10px] uppercase tracking-[0.3em] flex items-center gap-2">
                                                        <Icons.ShieldCheck /> GABARITO CONFIRMADO
                                                    </div>
                                                    <p className="text-slate-900 text-xl font-black italic">"{currentQuestion.respostaCorreta}"</p>
                                                </div>
                                                <div className="bg-slate-50 border-l-[12px] border-slate-800 p-8 rounded-r-3xl border border-slate-200">
                                                    <div className="text-slate-400 font-black mb-3 text-[10px] uppercase tracking-[0.3em] flex items-center gap-2">
                                                        <Icons.Info /> BASE DE CONHECIMENTO
                                                    </div>
                                                    <p className="text-slate-700 leading-relaxed font-bold text-base md:text-lg">{currentQuestion.explicacao}</p>
                                                </div>
                                            </div>
                                        )}
                                    </div>
                                    <div className="absolute -bottom-6 left-16 md:left-24 flex gap-16 pointer-events-none">
                                        <TruckWheel isDriving={isDriving} /><TruckWheel isDriving={isDriving} />
                                    </div>
                                </div>

                                {/* CABINE FRONTEL (ULTRA) */}
                                <div className="hidden md:block relative w-56 h-[420px] bg-gradient-to-b from-orange-500 to-orange-700 rounded-r-[3rem] border-b-[16px] border-orange-900 shadow-2xl z-10 transform -translate-x-1 border-r-[12px] border-orange-800">
                                    <div className="absolute top-10 left-4 right-6 h-32 bg-slate-900 rounded-tr-[2.5rem] rounded-bl-lg border-4 border-orange-400 overflow-hidden shadow-inner ring-2 ring-orange-900/30">
                                        <div className="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-sky-400/20 to-transparent"></div>
                                    </div>
                                    <div className="absolute bottom-28 right-4 left-6 space-y-3">
                                        <div className="flex justify-end gap-2"><div className="w-6 h-14 bg-yellow-100 rounded-lg shadow-[10px_0_30px_rgba(254,240,138,0.6)] border-2 border-orange-800 animate-pulse"></div></div>
                                    </div>
                                    <div className="absolute -bottom-6 right-12 pointer-events-none"><TruckWheel isDriving={isDriving} /></div>
                                    {isDriving && (
                                        <div className="absolute -top-12 left-8 w-6 h-20 bg-slate-700 rounded-t-lg">
                                            <div className="absolute -top-12 left-0 w-full flex flex-col items-center gap-2">
                                                <div className="w-6 h-6 bg-slate-400/30 rounded-full blur-md animate-ping"></div>
                                                <div className="w-8 h-8 bg-slate-400/20 rounded-full blur-lg animate-pulse"></div>
                                            </div>
                                        </div>
                                    )}
                                </div>
                            </div>
                        </div>

                        {/* Painel de Controlo */}
                        <div className="mt-24 flex flex-col md:flex-row justify-between items-center gap-10">
                            <button onClick={() => currentStep > 0 && triggerDriveAnimation(currentStep - 1)} disabled={currentStep === 0 || isDriving} className={`flex items-center gap-4 px-10 py-5 rounded-[2rem] font-black text-[10px] tracking-widest uppercase border-2 ${currentStep === 0 || isDriving ? 'text-slate-800 border-slate-900 cursor-not-allowed opacity-30' : 'text-white border-slate-800 hover:bg-slate-900 shadow-2xl'}`}>
                                <Icons.ChevronLeft /> Ponto Anterior
                            </button>
                            <div className="flex gap-4">
                                {quizData.map((_, i) => <div key={i} className={`transition-all duration-700 rounded-full h-1.5 ${i === currentStep ? 'w-12 bg-orange-500 shadow-[0_0_20px_rgba(249,115,22,0.6)]' : 'w-2 bg-slate-800'}`} />)}
                            </div>
                            <button onClick={() => currentStep < quizData.length - 1 ? triggerDriveAnimation(currentStep + 1) : triggerDriveAnimation(0)} disabled={isDriving} className={`flex items-center gap-4 px-12 py-6 rounded-[2rem] font-black text-[10px] tracking-widest uppercase transition-all shadow-2xl ${currentStep === quizData.length - 1 ? 'bg-white text-slate-950 hover:bg-orange-500 hover:text-white' : 'bg-orange-600 text-white hover:bg-orange-500 shadow-orange-900/40 active:scale-95'}`}>
                                {currentStep === quizData.length - 1 ? 'Ciclo Completo' : 'Prosseguir Rota'} <Icons.ChevronRight />
                            </button>
                        </div>

                        {/* Dashboard de Telemetria */}
                        <div className="mt-20 p-10 bg-gradient-to-b from-slate-900 to-black rounded-[3rem] border border-slate-800 shadow-inner">
                            <div className="grid grid-cols-1 md:grid-cols-3 gap-12">
                                <div className="space-y-4">
                                    <div className="flex items-center gap-3 text-orange-500"><Icons.Zap /> <span className="text-[10px] font-black uppercase tracking-widest">Motor / Eficiência</span></div>
                                    <p className="text-2xl font-black text-white">Consumo Zero</p>
                                    <div className="w-full h-1 bg-slate-800 rounded-full overflow-hidden"><div className="w-[90%] h-full bg-emerald-500 shadow-[0_0_10px_#10b981]"></div></div>
                                </div>
                                <div className="space-y-4 border-x border-slate-800 px-12 text-center md:text-left">
                                    <div className="flex items-center justify-center md:justify-start gap-3 text-blue-500"><Icons.Warehouse /> <span className="text-[10px] font-black uppercase tracking-widest">Status / Local</span></div>
                                    <p className="text-2xl font-black text-white">Treino Ativo</p>
                                    <p className="text-slate-500 font-bold text-xs italic">Carga conferida.</p>
                                </div>
                                <div className="space-y-4 text-center md:text-right">
                                    <div className="flex items-center justify-center md:justify-end gap-3 text-emerald-500"><Icons.ShieldCheck /> <span className="text-[10px] font-black uppercase tracking-widest">Segurança / EPI</span></div>
                                    <p className="text-2xl font-black text-white">100% OK</p>
                                    <p className="text-slate-500 font-bold text-xs">Sistema Blindado.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <footer className="mt-8 mb-4 text-center text-slate-700 text-[10px] font-black uppercase tracking-[0.5em]">LogiMaster Management System v3.0</footer>
                </div>
            );
        }

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>
